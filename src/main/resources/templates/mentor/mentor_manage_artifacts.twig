<div class="add_artifact_container">
    <div class="manageArtifactTable">
        <table class="artifactTable" id="table" border="1">
            <thead>
            <tr>
                {#<th>No.</th>#}
                <th>Title</th>
                <th>Category</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            {% for artifact in artifactsModels %}
                <tr>
                    {#<td>{{ loop.index }}</td>#}
                    <td>{{ artifact.title }}</td>
                    <td>{{ artifact.category }}</td>
                    <td>{{ artifact.price }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="submitArtifactTable">
        <form method="POST" onsubmit="return confirm('Are you sure you want to submit this form?');">
            Title :<input type="text" name="title" id="title" required>
            Category :<input type="text" name="category" id="category" required>
            Price :<input type="number" name="price" id="price" required>
            <br>
            <input class="markSubmit" id="submit" name="button" type="submit"  value="Add">
            <input class="markSubmit" id="submit" name="button" type="submit"  value="Remove">
            <input class="markSubmit" id="submit" name="button" type="submit"  value="Update">
        </form>
    </div>
</div>
