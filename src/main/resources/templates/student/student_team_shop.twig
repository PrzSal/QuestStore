<header>Welcome in Team shop: </header>
{% include data1 ignore missing %}

<div class="container">
    <div class="text">Team: {{ teamName }}</div>
    <div class="text">Wallet Teams: {{ walletTeam }}</div>
    <div class="text">Yours Members: </div>
    <div class="globalTable">
        <table class="localTable" id="table" border="21">
            <thead>
                <tr>
                    <th>Nr.</th>
                    <th>Name </th>
                    <th>Surname </th>
                </tr>
            </thead>
            <tbody>
            {% if members.size() == 0 %}
            <a class="emptyList">No team</a>
            {% else %}
            {% for member in members %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ member.name }}</td>
                    <td>{{ member.surname }}</td>

                </tr>
            {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
</div>