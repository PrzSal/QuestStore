<div class="wallet_container">
    <div class="tab tab-1">
        <table class="walletTable" id="table" border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Used</th>
                </tr>
            </thead>
            <tbody>
            {% if artifactsModels.size() == 0 %}
                <a class="no_art_info">NO ARTIFACTS IN WALLET</a>
            {% else %}
                {% for artifact in artifactsModels %}
                    <tr>
                        <td>{{ artifact.title }}</td>
                        <td>{{ artifact.category }}</td>
                        <td>
                            {% if artifact.isUsed == 0 %}
                                NO
                            {% else %}
                                YES
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
    <div class="tab tab-2wallet">
        <a>Your coins:</a>
        <br><br>
        <a>{{ coolCoins }}</a>
    </div>
</div>



<style>

    div.wallet_container {
        display: flex;
        justify-content: center;
        margin-top: 20%;
        transform: scale(1.2, 1.2);

    }

    .tab{float: left;}
    .tab-2 input{display: block;margin-bottom: 10px}

    table.walletTable {
        font-family: Arial, Helvetica, sans-serif;
        border: 2px solid #1C6EA4;
        width: 180%;
        text-align: center;

    }

    .tab-2wallet {
        font-family: Arial, Helvetica, sans-serif;
        border: 2px solid #1C6EA4;
        width: 14.5%;
        text-align: center;
        margin-left: 30%;
    }


    table.walletTable td, table.walletTable th, .tab-2wallet {
        border: 1px solid #AAAAAA;
        padding: 3px 3px;
    }
    table.walletTable tbody tr {
        transition:all .25s ease-in-out;
        background: #a4ffff;
    }
    table.walletTable tr:nth-child(even) {
        background: #6fb79c;
    }
    table.walletTable thead, .tab-2wallet {
        background: #1C6EA4;
        background: -moz-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        background: -webkit-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        background: linear-gradient(to bottom, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        border-bottom: 2px solid #444444;
    }
    table.walletTable thead th, .tab-2wallet {
        font-size: 18px;
        font-weight: bold;
        color: #FFFFFF;
        text-align: center;
    }
    table.walletTable thead th:first-child {
        border-left: none;
    }

    table.walletTable tbody tr:hover {
        background-color: #3f47ff; cursor: pointer
    }

    .no_art_info {
        background: #1C6EA4;
        background: -moz-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        background: -webkit-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        background: linear-gradient(to bottom, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        font-family: Arial, Helvetica, sans-serif;
        border: 2px solid #1C6EA4;
        border-bottom: 0px solid #444444;
        font-size: 18px;
        font-weight: bold;
        color: #FFFFFF;
    }

</style>




