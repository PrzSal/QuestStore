<div class="container">
    <div class="tab tab-1">
        <table class="blueTable" id="table" border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                {% for artifact in artifactsModels %}
                    <tr>
                        <td>{{ artifact.title }}</td>
                        <td>{{ artifact.category }}</td>
                        <td>{{ artifact.price }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>


<style>

    div.container {
        display: flex;
        justify-content: center;
        margin-top: 20%;
        transform: scale(1.2, 1.2);

    }

    .tab{float: left;}
    .tab-2 input{display: block;margin-bottom: 10px}



    table.blueTable {
        font-family: Arial, Helvetica, sans-serif;
        border: 2px solid #1C6EA4;
        width: 180%;
        text-align: center;
        margin-left: 15%;
    }

    .tab-2 {
        font-family: Arial, Helvetica, sans-serif;
        border: 2px solid #1C6EA4;
        width: 14.5%;
        text-align: center;
        margin-left: 30%;
    }


    table.blueTable td, table.blueTable th, .tab-2 {
        border: 1px solid #AAAAAA;
        padding: 3px 3px;
    }
    table.blueTable tbody tr {
        transition:all .25s ease-in-out;
        background: #a4ffff;
    }
    table.blueTable tr:nth-child(even) {
        background: #6fb79c;
    }
    table.blueTable thead, .tab-2 {
        background: #1C6EA4;
        background: -moz-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        background: -webkit-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        background: linear-gradient(to bottom, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
        border-bottom: 2px solid #444444;
    }
    table.blueTable thead th, .tab-2 {
        font-size: 18px;
        font-weight: bold;
        color: #FFFFFF;
        text-align: center;
    }
    table.blueTable thead th:first-child {
        border-left: none;
    }

    table.blueTable tbody tr:hover {
        background-color: #3f47ff; cursor: pointer
    }

</style>




