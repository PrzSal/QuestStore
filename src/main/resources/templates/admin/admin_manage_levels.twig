<div class="container">
    <div class="globalTable">
        <table class="localTable" id="table" border="1">
            <thead>
            <tr>
                <th>No.</th>
                <th>Level name</th>
                <th>Exp required</th>
            </tr>
            </thead>
            <tbody>
            {% for level in levelModels %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ level.levelName }}</td>
                    <td>{{ level.expRequired }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="submitTable">
        <form method="POST" onsubmit="return confirm('Are you sure you want to submit this form?');">
